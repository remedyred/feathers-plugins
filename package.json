{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"check": "turbo run build //#lint",
		"clean": "pnpm run clean:builds && pnpm run clean:modules",
		"clean:builds": "turbo run clean",
		"clean:modules": "shx rm -rf **/node_modules",
		"depcheck": "turbo run depcheck",
		"dev": "turbo run dev",
		"docs": "readmes",
		"fix": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color --fix",
		"index": "turbo run index",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"prepare": "husky install",
		"prerelease": "turbo run build docs ///#fix depcheck",
		"release": "turbo run release",
		"release:ci": "turbo run release --concurrency=1"
	},
	"lint-staged": {
		"*.{ts,json}": "eslint --fix --cache"
	},
	"devDependencies": {
		"@lerna-lite/cli": "1.10.0",
		"@snickbit/eslint-config": "0.0.10",
		"@snickbit/readmes": "0.0.2",
		"@types/jest": "28.1.6",
		"depcheck": "1.4.3",
		"husky": "^8.0.0",
		"lint-staged": "^13.0.3",
		"shx": "0.3.4",
		"turbo": "1.4.3",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"readmes": {
		"repo": "snickbit/feathers-plugins"
	}
}
