{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"clean": "pnpm run clean:builds && pnpm run clean:modules",
		"clean:builds": "turbo run clean",
		"clean:modules": "shx rm -rf **/node_modules",
		"dev": "turbo run dev",
		"fix": "eslint **/*.{ts,json} --cache --color --fix",
		"index": "turbo run index",
		"lint": "eslint **/*.{ts,json} --cache --color",
		"prepare": "husky install",
		"readmes": "readmes",
		"prerelease": "turbo run prod test fix depcheck readmes",
		"release": "pnpm run prerelease && lerna publish",
		"test": "pnpm jest"
	},
	"lint-staged": {
		"*.{ts,json}": "pnpm run fix"
	},
	"jest": {
		"noStackTrace": true,
		"passWithNoTests": true,
		"preset": "ts-jest",
		"silent": true,
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@lerna-lite/cli": "1.10.0",
		"@snickbit/eslint-config": "0.0.7",
		"@snickbit/readmes": "0.0.2",
		"@types/jest": "27.5.2",
		"depcheck": "1.4.3",
		"husky": "^8.0.0",
		"jest": "27.5.1",
		"lint-staged": "^13.0.3",
		"shx": "0.3.4",
		"ts-jest": "27.1.5",
		"turbo": "1.4.3",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"readmes": {
		"repo": "snickbit/feathers-plugins"
	}
}
