{
	"name": "@snickbit/feathers-mongo",
	"description": "Extended functionality for FeathersJS MongoDB database adapter",
	"version": "0.0.67",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"clean": "shx rm -rf ./dist",
		"depcheck": "depcheck",
		"build": "tsup",
		"meta": "npm run prod --metafile",
		"prod": "npm run build --minify",
		"watch": "npm run build --watch"
	},
	"dependencies": {
		"@feathersjs/adapter-commons": "^5.0.0-pre.18",
		"@feathersjs/errors": "^5.0.0-pre.18",
		"@feathersjs/feathers": "^5.0.0-pre.18",
		"@snickbit/feathers-model": "^0.0.41",
		"@snickbit/out": "^2.0.18",
		"@snickbit/utilities": "^3.0.14",
		"feathers-mongodb": "^6.4.1",
		"mongodb": "^4.5.0"
	},
	"devDependencies": {
		"@feathersjs/feathers": "^5.0.0-pre.18",
		"@remedyred/indexer": "^2.0.77",
		"jest": "^27.5.1",
		"tsup": "^5.12.6"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
